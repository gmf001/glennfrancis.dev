---
export interface Props {
  title: string;
  body: string;
  href: string;
  icon: string;
  provider: string;
}

import { Icon } from 'astro-icon';
const { href, title, body, icon, provider } = Astro.props;
---

<a
  href={href}
  target="_blank"
  class="rounded-2xl flex flex-row space-x-4 sm:space-x-8 items-center px-4 py-5 border border-slate-800/80 sm:px-8 text-left sm:h-36 bg-dark-accent/50 hover:bg-dark-accent/80"

>
  <div
    class="p-3 md:p-4 bg-gradient-to-br from-gradient-blue to-gradient-purple text-white rounded-lg"
  >
    <Icon name={icon} class="h-6 w-6 md:h-8 md:w-8" />
  </div>

    <div class="font-bold uppercase">
      <p class="text-base sm:text-xl text-primary-accent justify-self-end">
        {provider}
      </p>
      <p class="text-lg md:text-3xl text-white">{title}</p>
      <p class="text-xs sm:text-base font-bold uppercase text-slate-300">
        {body}
      </p>
    </div>
</a>